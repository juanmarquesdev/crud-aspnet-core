@model Produtos
@{
  ViewData["Title"] = "Editar Produto";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Update">
  <div asp-validation-summary="All">

  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label" asp-for="Descricao">Descrição do produto</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="1" asp-for="Descricao"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">R$</span>
    <input type="float" class="form-control" asp-for="Preco">
    <br>
    <span asp-validation-for="Preco" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Atualizar</button>
  <a asp-controller="Produtos" asp-action="Index" class="btn btn-primary">Voltar</a>
</form>
